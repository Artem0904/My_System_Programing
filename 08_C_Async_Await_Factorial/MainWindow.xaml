<Window x:Class="_08_C_Async_Await_Factorial.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_08_C_Async_Await_Factorial"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <ToolBar DockPanel.Dock="Top">
            <Label>Number:</Label>
            <TextBox x:Name="NumberTextBox" MinWidth="100"></TextBox>
            <Button Click="AddFactorial_Click">Add</Button>
        </ToolBar>
        <ListBox x:Name="FactorialListBox" Margin="5,0,5,5"></ListBox>

    </DockPanel>
</Window>
